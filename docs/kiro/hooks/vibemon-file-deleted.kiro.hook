{
  "name": "Vibe Monitor - File Deleted",
  "version": "1.0.0",
  "description": "Send 'working' state to Vibe Monitor when files are deleted",
  "when": {
    "type": "fileDeleted",
    "patterns": ["**/*"]
  },
  "then": {
    "type": "runCommand",
    "command": "python3 ~/.vibemon/hook.py fileDeleted"
  }
}

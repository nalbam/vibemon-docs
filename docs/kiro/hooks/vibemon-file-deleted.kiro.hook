{
  "name": "VibeMon - File Deleted",
  "version": "1.0.0",
  "description": "Send 'working' state to VibeMon when files are deleted",
  "when": {
    "type": "fileDeleted",
    "patterns": ["**/*"]
  },
  "then": {
    "type": "runCommand",
    "command": "python3 ~/.kiro/hooks/vibemon.py fileDeleted"
  }
}

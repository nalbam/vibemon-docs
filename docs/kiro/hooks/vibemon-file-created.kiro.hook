{
  "name": "VibeMon - File Created",
  "version": "1.0.0",
  "description": "Send 'working' state to VibeMon when files are created",
  "when": {
    "type": "fileCreated",
    "patterns": ["**/*"]
  },
  "then": {
    "type": "runCommand",
    "command": "python3 ~/.kiro/hooks/vibemon.py fileCreated"
  }
}

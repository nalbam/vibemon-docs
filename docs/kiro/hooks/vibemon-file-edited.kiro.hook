{
  "name": "VibeMon - File Edited",
  "version": "1.0.0",
  "description": "Send 'working' state to VibeMon when files are edited",
  "when": {
    "type": "fileEdited",
    "patterns": ["**/*"]
  },
  "then": {
    "type": "runCommand",
    "command": "python3 ~/.kiro/hooks/vibemon.py fileEdited"
  }
}

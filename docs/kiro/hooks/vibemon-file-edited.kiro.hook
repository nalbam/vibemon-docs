{
  "name": "Vibe Monitor - File Edited",
  "version": "1.0.0",
  "description": "Send 'working' state to Vibe Monitor when files are edited",
  "when": {
    "type": "fileEdited",
    "patterns": ["**/*"]
  },
  "then": {
    "type": "runCommand",
    "command": "python3 ~/.vibemon/hook.py fileEdited"
  }
}

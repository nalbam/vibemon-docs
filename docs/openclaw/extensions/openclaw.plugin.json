{
  "id": "vibemon-bridge",
  "name": "VibeMon Bridge",
  "description": "Real-time status bridge for VibeMon (ESP32/Desktop)",
  "version": "1.0.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "projectName": {
        "type": "string",
        "default": "OpenClaw",
        "description": "Project name displayed on VibeMon"
      },
      "character": {
        "type": "string",
        "default": "claw",
        "description": "Character to display (clawd, kiro, claw)"
      },
      "serialEnabled": {
        "type": "boolean",
        "default": false,
        "description": "Enable serial output to ESP32"
      },
      "httpEnabled": {
        "type": "boolean",
        "default": false,
        "description": "Enable HTTP output to VibeMon Desktop"
      },
      "httpUrls": {
        "type": "array",
        "items": { "type": "string" },
        "default": ["http://127.0.0.1:19280"],
        "description": "VibeMon HTTP URLs (multiple targets supported)"
      },
      "autoLaunch": {
        "type": "boolean",
        "default": false,
        "description": "Auto-launch Desktop App via npx if not running"
      },
      "vibemonUrl": {
        "type": ["string", "null"],
        "default": "",
        "description": "VibeMon API URL (e.g., https://vibemon.io)"
      },
      "vibemonToken": {
        "type": ["string", "null"],
        "default": "",
        "description": "VibeMon API access token"
      },
      "debug": {
        "type": "boolean",
        "default": false,
        "description": "Enable debug logging"
      }
    }
  },
  "uiHints": {
    "projectName": {
      "label": "Project Name",
      "help": "Name shown on VibeMon display"
    },
    "character": {
      "label": "Character",
      "help": "clawd (orange), kiro (white), claw (red)"
    },
    "serialEnabled": {
      "label": "Serial Output",
      "help": "Send status to ESP32 via USB serial"
    },
    "httpEnabled": {
      "label": "HTTP Output",
      "help": "Send status to VibeMon Desktop app"
    },
    "httpUrls": {
      "label": "HTTP URLs",
      "help": "List of VibeMon HTTP URLs (e.g., http://127.0.0.1:19280)",
      "advanced": true
    },
    "autoLaunch": {
      "label": "Auto Launch",
      "help": "Auto-launch Desktop App via npx if not running"
    },
    "vibemonUrl": {
      "label": "VibeMon API URL",
      "help": "URL for VibeMon cloud service (e.g., https://vibemon.io)",
      "advanced": true
    },
    "vibemonToken": {
      "label": "VibeMon API Token",
      "help": "Access token from VibeMon dashboard",
      "advanced": true
    },
    "debug": {
      "label": "Debug Mode",
      "help": "Enable verbose logging",
      "advanced": true
    }
  }
}
